{
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist/src/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
